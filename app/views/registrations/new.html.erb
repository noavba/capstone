
<section class="vh-100">
  <div class="container-fluid">
    <div class="row">
      <div class="col-sm-6 text-black">

        <div class="px-5 ms-xl-4">

          <span class="h1 fw-bold mb-0">Easeply</span>
          <p class = "h3 fw-bold mb-0"> An Application Service</p>
        </div>

        <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">
          <!-- Form to interact with the user model & sign them up-->
          <%= form_with model: @user, url: sign_up_path, class: 'w-23rem' do |form| %>

            <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Register</h3>

            <div class="form-outline mb-4">
              <%= form.text_field :username, class: 'form-control form-control-lg', placeholder: 'Username' %>
            </div>

            <div class="form-outline mb-4">
              <%= form.text_field :email, class: 'form-control form-control-lg', placeholder: 'Email' %>
            </div>

            <div class="form-outline mb-4">
              <%= form.password_field :password, class: 'form-control form-control-lg', placeholder: 'Password' %>
            </div>

            <div class="form-outline mb-4">
              <%= form.password_field :password_confirmation, class: 'form-control form-control-lg', placeholder: 'Confirm Password' %>
            </div>

            <div class="pt-1 mb-4">
              <%= form.submit 'Register', class: 'btn btn-dark btn-lg btn-block' %>
            </div>

            <p>Already have an account? <%= link_to 'Log in here', 'sign_in', class: 'link-info' %></p>

          <% end %>

        </div>

      </div>
      <!-- Image on right side of screen -->
      <div class="col-sm-6 px-0 d-none d-sm-block">
        <img src="https://images.unsplash.com/photo-1456513080510-7bf3a84b82f8?q=80&w=2873&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D"
             alt="Login image" class="w-100 vh-100" style="object-fit: cover; object-position: left;">
      </div>
    </div>
  </div>
  <script>
      document.addEventListener('DOMContentLoaded', function() {
          // Clear the form fields if page refreshes/error occurs (taken username)
          document.getElementById('user_username').value = '';
          document.getElementById('user_password').value = '';
          document.getElementById('user_email').value = '';
      });
  </script>
</section>




