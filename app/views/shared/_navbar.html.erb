<!navbar!>

<nav class="navbar navbar-expand-lg navbar-dark bg-dark text-light">
  <a class="navbar-brand mr-4 ml-2" href="/" style = "margin-left:10px">Home</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse" id="navbarNav">
    <ul class="navbar-nav">
      <!-- seeing if current user is here -->
      <% if Current.user %>
        <li class="nav-item active">
          <a class="nav-link" href="/inquiries/new">Student Application</a>
        </li>
      <%else %>
        <li class="nav-item active">
          <script>
            $(document).ready(function(){
                $( "#studentApplication" ).on( "click", function( event ) {
                    //if not signed in, send them to sign up link to apply
                    window.location.href = "/sign_up"
                    event.preventDefault();
                });
            });
          </script>
          <a class="nav-link" href="/inquiries/new" id = "studentApplication">Apply Now</a>

        </li>
      <%end %>
      <li class="nav-item active">
        <a class="nav-link" href="/admin">Admin</a>
      </li>

    </ul>
    <ul class = "navbar-nav ms-auto mb-2 mb-lg-0">
      <% if Current.user %>
        <li class = "nav-item">
          <span class=" nav-link"> Logged in as: <%= Current.user.username%></span>
        </li>

        <li class = "nav-item " style = "margin-right:10px">
          <%= button_to "Logout", logout_path, method: :delete, class: "btn btn-outline-secondary ml-4 " %>
        </li>
      <% else %>
        <li class = "nav-item">
          <%= link_to "Sign up", sign_up_path, class: "nav-link"%>
        </li>
        <li class = "nav-item">
          <%= link_to "Login", sign_in_path, class: "nav-link"%>
        </li>
      <% end %>
    </ul>
  </div>
</nav>


